-# coding: utf-8
.row
  - form_tag url(:session, :create), :class=>'login form-horizontal span6 offset2' do
    .login-header.modal-header
    .login-body.modal-body
      = [:error, :warning, :notice].map { |type| flash_tag(type, :class => "alert alert-#{type} fade in", :bootstrap => true) }.join.html_safe

      %fieldset.control-group
        %label.login-input-label.control-label{:for => :name}= '姓名'
        .login-controls.controls=text_field_tag :name, :value => params[:name], :autofocus => true
      %fieldset.control-group
        %label.login-input-label.control-label{:for => :password}= '密码'
        .login-controls.controls=password_field_tag :password, :value => params[:password]

    .login-footer.modal-footer
      =submit_tag('登入', :class => 'btn btn-primary pull-right')