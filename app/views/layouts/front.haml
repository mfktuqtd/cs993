-# coding: utf-8
!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title
      计算机993班
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "993班"}
    %meta{:content => "", :name => "pengke"}
    = stylesheet_link_tag 'bootstrap', 'bootstrap-responsive'
    %script{:src => "http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"}
    :css
      body {
      padding-top: 60px;
      padding-bottom: 40px;
      }
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} 
            计算机993班
          .nav-collapse.collapse
            %ul.nav
              %li{:class => ('active' if @section == 'contact')}
                %a{:href => "/contact/index"}通讯录
              %li{:class => ('active' if @section == 'photo')}
                %a{:href => "/photo"}照片墙
              %li.last
                %a{:href => "#"}联系我们
            - if logged_in?
              %p.navbar-text.pull-right
                = current_account.name
                %a.navbar-link{:href => '/session/logout'} 退出
            - else
              %a.btn{:href => '/register'} 注册

    .container
      = yield
      %footer
        %p &copy; Company 2013
    = javascript_include_tag 'bootstrap.min', 'application'
